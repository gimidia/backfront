# ==============================================================================
# General .gitignore for Full-Stack Project (Spring Boot + Angular)
# ==============================================================================

# ==============================================================================
# GENERAL
# ==============================================================================
*.log
*.tmp
*.temp
.DS_Store
.DS_Store?
._*
.Spotlight-V100
.Trashes
ehthumbs.db
Thumbs.db
*.swp
*.swo
*~

# ==============================================================================
# BACKEND (Spring Boot / Maven / Java)
# ==============================================================================

# Maven
backend/target/
backend/pom.xml.tag
backend/pom.xml.releaseBackup
backend/pom.xml.versionsBackup
backend/pom.xml.next
backend/release.properties
backend/dependency-reduced-pom.xml
backend/buildNumber.properties
backend/.mvn/timing.properties
backend/.mvn/wrapper/maven-wrapper.jar

# Java
backend/**/*.class
backend/**/*.jar
backend/**/*.war
backend/**/*.nar
backend/**/*.ear
backend/**/*.zip
backend/**/*.tar.gz
backend/**/*.rar
backend/hs_err_pid*
backend/replay_pid*

# Spring Boot
backend/HELP.md
backend/.gradle
backend/build/
backend/!gradle/wrapper/gradle-wrapper.jar
backend/!**/src/main/**/build/
backend/!**/src/test/**/build/

# IDE - IntelliJ IDEA
backend/.idea
backend/*.iws
backend/*.iml
backend/*.ipr
backend/out/
backend/!**/src/main/**/out/
backend/!**/src/test/**/out/

# IDE - Eclipse
backend/.apt_generated
backend/.classpath
backend/.factorypath
backend/.project
backend/.settings
backend/.springBeans
backend/.sts4-cache
backend/bin/
backend/!**/src/main/**/bin/
backend/!**/src/test/**/bin/

# IDE - NetBeans
backend/nbproject/private/
backend/nbbuild/
backend/dist/
backend/nbdist/
backend/.nb-gradle/

# IDE - VS Code
backend/.vscode/

# Application specific
backend/application-local.properties
backend/application-dev.properties
backend/application-prod.properties

# ==============================================================================
# FRONTEND (Angular / Node.js / npm)
# ==============================================================================

# Dependencies
frontend/node_modules/
frontend/npm-debug.log*
frontend/yarn-debug.log*
frontend/yarn-error.log*

# Build outputs
frontend/dist/
frontend/tmp/
frontend/out-tsc/
frontend/bazel-out/

# Angular cache
frontend/.angular/cache/

# IDE files
frontend/.vscode/
frontend/.idea/
frontend/*.swp
frontend/*.swo

# OS files
frontend/.DS_Store
frontend/Thumbs.db

# Environment files
frontend/.env
frontend/.env.local
frontend/.env.production

# Coverage reports
frontend/coverage/

# Logs
frontend/*.log

# Runtime data
frontend/pids
frontend/*.pid
frontend/*.seed
frontend/*.pid.lock

# IMPORTANT: These files MUST be included in Git:
# !frontend/package.json
# !frontend/package-lock.json
# !frontend/angular.json
# !frontend/tsconfig.json
# !frontend/tsconfig.app.json
# !frontend/tsconfig.spec.json
# !frontend/tailwind.config.js
# !frontend/postcss.config.js
# !frontend/src/


